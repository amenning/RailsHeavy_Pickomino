<div  id = "player_worms">
  <div class = 'titles-box'>
  	<span class = 'titles'>Player's Worms (Score: <%= @player_worms_total_count %>)</span>
  </div>
  <div class = 'playerWorms inset'>
    <% @player_worms.each do |worm| %>
      <%= content_tag :div, 'worm', class: 'worm inset ' do %>
        <%= render 'worm', locals: { worm: @worm = worm } %>
      <% end %>
    <% end %>
  </div>
</div>
