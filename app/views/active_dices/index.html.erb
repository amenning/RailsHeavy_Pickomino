<p id="notice"><%= notice %></p>

<h1>Listing Active Dices</h1>

<table>
  <thead>
    <tr>
      <th>Active dice set</th>
      <th>Dice</th>
      <th>Can freeze</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @active_dices.each do |active_dice| %>
      <tr>
        <td><%= active_dice.active_dice_set %></td>
        <td><%= active_dice.dice %></td>
        <td><%= active_dice.can_freeze %></td>
        <td><%= link_to 'Show', active_dice %></td>
        <td><%= link_to 'Edit', edit_active_dice_path(active_dice) %></td>
        <td><%= link_to 'Destroy', active_dice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

